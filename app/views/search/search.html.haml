.box
	%h2.cufon1
		Results
	-form_tag '/search' do
		%p
			=label_tag "Name:"
			=text_field_tag :name_contains, params[:name_contains]
		%p
			=label_tag "Summary:"
			=text_field_tag :summary_contains, params[:summary_contains]
		%p
			=label_tag "Category:"
			=text_field_tag :category_name_contains, params[:category_name_contains]
		%input{:id => "", :name => "", :src => "/images/btn_search.gif", :type => "image", :value => "Search"}/
	
	-unless @products.empty?
		-@products.each do |product|
			%h3.cufon1
				%a{:href => product_path(product)}
					=highlight(product.name, @search_term)
			%h4.cufon1
				=number_to_currency(product.price)
	-else
		%h3.cufon1 No results found
/ /box