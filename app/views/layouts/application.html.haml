!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
	%head
		%meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
		%title ABC - Online Learning Center
		%link{:href => "/stylesheets/style.css", :rel => "stylesheet", :type => "text/css"}/
		%link{:href => "/stylesheets/custom.css", :rel => "stylesheet", :type => "text/css"}/
		%script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript"}
		%script{:src => "/javascripts/cufon.js", :type => "text/javascript"}
		%script{:src => "/javascripts/jquery.plugins.js", :type => "text/javascript"}
		%script{:src => "/javascripts/functions.js", :type => "text/javascript"}
		=javascript_include_tag :defaults
		=javascript_include_tiny_mce_if_used
		- if using_tiny_mce?
			=tiny_mce
		/[if lt IE 7]
			=stylesheet_link_tag 'ie6'
			=javascript_include_tag 'ie6hover.js'
		=csrf_meta_tag
	%body
	#header
		.wrapper
			#logo
				%a{:href => root_path}
					%img{:alt => "ABC - Online Learning Center", :height => "86", :src => "/images/logo_abc.gif", :width => "197"}/
			%ul#topnav
				-if user_signed_in?
					%li.icon.ic-user
						%a{:href => user_path(current_user)}
							=current_user.email
				-else
					%li.icon.ic-user
						%a{:href => new_user_session_path} Sign In
				-if user_signed_in?
					%li.icon.ic-cart
						%a{:href => '/cart'}
							=pluralize(current_user.pending_purchases.count, 'product')
							, $0.00
				-else
					%li.icon.ic-cart
						%a{:href => '/cart'} 0 products, $0.00
				%li
					%a{:href => "#"} Spanish
				-if user_signed_in?
					%li
						%a{:href => '/my_products'} My products
					%li
						%a{:href => destroy_user_session_path} Sign Out
					-if current_user.admin?
						%li
							%a{:href => admin_root_path} Admin
			/ /topnav
			=render :partial => 'layouts/search_form'
			%ul#nav
				-if user_signed_in? && current_user.admin?
