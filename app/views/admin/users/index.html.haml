.box
	%h2.cufon1 Users
	%table.products
		%thead
			%tr
				%th Name
				%th Email
				%th{:colspan => 2} Actions
			%tr
		%tbody
			-@users.each do |user|
				%tr
					%td.name
						=user.first_name
						=user.last_name
					%td= user.email
					%td
						=link_to 'Edit', edit_admin_user_path(user)
					%td
						=link_to 'Delete', user, :method => :delete, :confirm => "You sure?"
