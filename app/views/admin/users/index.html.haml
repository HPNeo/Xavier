.box
	%h2.cufon1 Users
	%table.products
		%thead
			%tr
				%th Name
				%th Email
				%th Creation date
				%th Last signed in				
				%th{:colspan => 2} Actions
			%tr
		%tbody
			-@users.each do |user|
				%tr
					%td.name
						=user.first_name
						=user.last_name
					%td= user.email
					%td= user.created_at.to_s(:short)
					%td= user.last_sign_in_at.to_s(:short)
					%td
						=link_to 'Edit', edit_admin_user_path(user)
						=link_to 'Destroy', [:admin,user], :method => :delete, :confirm => "You sure?"
