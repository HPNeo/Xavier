.box
	%h2.cufon1 Categories
	%table.products
		%thead
			%tr
				%th Name
				%th{:colspan => 2} Actions
			%tr
		%tbody
			-@categories.each do |category|
				%tr
					%td.name= category.name
					%td
						=link_to 'Edit', edit_admin_category_path(category)
					%td
						=link_to 'Delete', category, :method => :delete, :confirm => "You sure?"
/ /box