.box
	%h2.cufon1
		Add Product:
	-form_for([:admin, @product]) do |f|
		=render 'layouts/error_messages', :object => f.object
		%p.fields
			=f.label :name
			=f.text_field :name
		%p.fields
			=f.label :summary
			=f.text_area :summary
		%p.fields
			=f.label :price
			=f.text_field :price
		%p.fields
			=f.label :role
			=f.text_field :role
		%p.fields
			=f.label :category_id
			=collection_select(:product, :category_id, Category.all, :id, :name)
		%p.actions
			=f.submit "Add"