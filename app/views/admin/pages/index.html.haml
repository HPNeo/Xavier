.box
	%h2.cufon1 Pages
	%table.products
		%thead
			%tr
				%th Name
				%th{:colspan => 3} Actions
			%tr
		%tbody
			-@pages.each do |page|
				%tr
					%td.name= page.title
					%td
						=link_to 'View', page_path(page)
					%td
						=link_to 'Edit', edit_admin_page_path(page)
					%td
						=link_to 'Delete', [:admin, page], :method => :delete, :confirm => "You sure?"
/ /box